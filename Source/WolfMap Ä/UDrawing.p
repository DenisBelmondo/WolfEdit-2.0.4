unit UDrawing;interface	uses		UMapParams;	procedure CentreText (s: string);	procedure BoxText (s: string);	procedure RingText (s: string);implementation	procedure CentreText (s: string);	begin		Move(-StringWidth(s) div 2, (fontSize - fontDescent) div 2);		DrawString(s);	end;	procedure BoxText (s: string);		var			d, p: Point;			r: Rect;	begin		GetPen(p);		d.h := StringWidth(s) div 2 + 3;		d.v := (fontSize - fontDescent) div 2 + 3;		SetRect(r, p.h - d.h, p.v - d.v, p.h + d.h, p.v + d.v);		PenNormal;		FillRect(r, white);		FrameRect(r);		CentreText(s);	end;	procedure RingText (s: string);		var			d, p: Point;			r: Rect;	begin		GetPen(p);		d.h := StringWidth(s) div 2 + 5;		d.v := (fontSize - fontDescent) div 2 + 5;		SetRect(r, p.h - d.h, p.v - d.v, p.h + d.h, p.v + d.v);		PenNormal;		FillOval(r, white);		FrameOval(r);		CentreText(s);	end;end.