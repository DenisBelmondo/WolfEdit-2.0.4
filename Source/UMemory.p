unit UMemory;interface	function EnoughMemory (needed: longint): boolean;implementation	uses		UGoof;	const		notEnoughMemAlrtID = 167;	function EnoughMemory (needed: longint): boolean;		var			avail: longint;	begin		avail := FreeMem;		if avail >= needed then			EnoughMemory := true		else begin				DoAlert(notEnoughMemAlrtID);				EnoughMemory := false;			end;	end;end.